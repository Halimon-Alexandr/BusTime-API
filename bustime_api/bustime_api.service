[Unit]
Description=bustime_api Service
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/BusTime-API/bustime_api
ExecStart=/home/ubuntu/BusTime-API/.venv/bin/python3 /home/ubuntu/BusTime-API/bustime_api/main.py --host 0.0.0.0 --port 8000
Restart=always

[Install]
WantedBy=multi-user.target
